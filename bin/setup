#!/usr/bin/env bash
set -euo pipefail
IFS=$'\n\t'
set -vx

# Make sure we have Bundler installed
gem install bundler --conservative

# Set up configurable environment variables
if [ ! -f .env ]; then
  cp .env.example .env
fi

# Install required gems
bundle check --path vendor/bundle > /dev/null 2>&1 || bundle install --jobs=4 --retry=3 --path=vendor/bundle
